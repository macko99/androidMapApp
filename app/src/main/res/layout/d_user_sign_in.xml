<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="320dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/d_dialog_bg">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/questrial_regular_pl"
        android:textSize="18dp"
        android:text="@string/d_user_sign_in_title"
        android:textAlignment="center"
        android:layout_marginTop="30dp" />

    <EditText
        android:id="@+id/d_user_sign_in_input_login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginTop="50dp"
        android:hint="login" />

    <EditText
        android:id="@+id/d_user_sign_in_input_password"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="hasÅ‚o"
        android:inputType="textPassword" />

    <pl.mzlnk.emergencyspot.ui.view.button.NoIconButton
        android:id="@+id/d_user_sign_in_btn_submit"
        android:layout_width="140dp"
        android:layout_height="35dp"
        android:layout_marginTop="70dp"
        app:label="@string/btn_sign_in"
        app:labelSize="11dp" />

</LinearLayout>